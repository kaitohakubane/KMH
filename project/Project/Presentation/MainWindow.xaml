<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Background>
        <ImageBrush ImageSource="ios_7_galaxy-wide.jpg"/>
    </Window.Background>

    <Grid>
        <Label x:Name="label" Content="HKM Software" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FF39DFFF" FontSize="20"/>
        <StackPanel HorizontalAlignment="Center" Height="135" VerticalAlignment="Center" Width="200">
            <Button x:Name="btnStaff" Content="Staff"/>
            <Button x:Name="btnProduct" Content="Product"/>
            <Button x:Name="btnPayment" Content="Payment"/>
            <Button x:Name="btnCustomer" Content="Customer"/>
            <Button x:Name="btnReport" Content="Report"/>
            <Button x:Name="btnDiscount" Content="Discount"/>
            <Button x:Name="btnSupplier" Content="Supplier"/>
        </StackPanel>
        <Button x:Name="btnLogout" Content="LogOut" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Margin="216,0,227.4,31.8"/>
    </Grid>

</Window>
