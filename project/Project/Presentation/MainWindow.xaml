<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    

    <Grid>
        <Label x:Name="label" Content="HKM Software" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FF39DFFF" FontSize="20"/>
        <StackPanel HorizontalAlignment="Center" Height="135" VerticalAlignment="Center" Width="200">
            <Button x:Name="btnStaff" Content="Staff" Click="btnStaff_Click"/>
            <Button x:Name="btnProduct" Content="Product" Click="btnProduct_Click"/>
            <Button x:Name="btnPayment" Content="Payment" Click="btnPayment_Click"/>
            <Button x:Name="btnCustomer" Content="Customer" Click="btnCustomer_Click"/>
            <Button x:Name="btnReport" Content="Report" Click="btnReport_Click"/>
            <Button x:Name="btnDiscount" Content="Discount" Click="btnDiscount_Click"/>
            <Button x:Name="btnSupplier" Content="Supplier" Click="btnSupplier_Click"/>
        </StackPanel>
        <Button x:Name="btnLogout" Content="LogOut" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Margin="216,0,227.4,31.8"/>
    </Grid>

</Window>
